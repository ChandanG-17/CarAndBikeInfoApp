<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BikeInfo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bike Info"
        android:textSize="40dp"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/iv"
        android:layout_below="@+id/title"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bike" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="S1000RR"
        android:textSize="40dp"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/tv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Engine: 999cc(4-cylinder 4-stroke in-line engine) \n Max Power212.91 PS @ 13750 rpm \n Fuel Capacity: 16.5L  \n Mileage(Overall): 15.62 Kmpl \n Gear Box: 6Speed"
        android:textSize="20dp"
        android:layout_below="@+id/tv"
        android:layout_marginLeft="30dp"
        android:id="@+id/tv2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Now"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/BookNow"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_below="@+id/BookNow"
        android:id="@+id/Display"
        android:textColor="@color/light_coral"/>

</RelativeLayout>